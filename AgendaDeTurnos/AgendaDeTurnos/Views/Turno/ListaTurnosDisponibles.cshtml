@model IEnumerable<AgendaDeTurnos.Models.Turno>
    


<h2>Seleccione un turno</h2>

<div class="row">
    <div class="col-md-4">
        @if (Model.Count() == 0)
        {
            <h3>No hay turnos disponibles</h3>
        }
        else
        {
                <div >
                    <label >Turnos de @Model.First().Profesional.Apellido: </label>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    <a asp-action="Seleccionar" asp-route-id="@item.Id">Seleccionar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
         
        }
    </div>
</div>

<div>
    <a asp-action="SelecionProfesional">Back to List</a>
</div>