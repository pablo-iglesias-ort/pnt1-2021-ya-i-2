@model IEnumerable<AgendaDeTurnos.Models.Turno>
    


<h1>Prestaciones </h1>

<h4>Seleccione un turno</h4>

<div class="row">
    <div class="col-md-4">
        @if (Model.Count() == 0)
        {
            <h2>No hay turnos disponibles</h2>
        }
        else
        {
            <form asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Trunos de @Model.First().Profesional.Nombre: </label>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Confirmado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaAlta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DescripcionCancelacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Paciente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Profesional)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Confirmado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Activo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaAlta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DescripcionCancelacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Paciente.Apellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Profesional.Apellido)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        }
    </div>
</div>

<div>
    <a asp-action="SelecionProfesional">Back to List</a>
</div>