@model IEnumerable<AgendaDeTurnos.Models.Turno>





<div class="row">
    <div class="col-md-4">
        @if (Model.Count() == 0)
        {
            <h3>No hay turnos disponibles</h3>
        }
        else
        {
            <h3>Seleccione un turno</h3>

            <div>
                <label>Turnos de @Model.First().Profesional.Apellido: </label>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Fecha)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                <a asp-action="Seleccionar" asp-route-id="@item.Id">Seleccionar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
    </div>
</div>


    @if (Model.Count() == 0)
    {
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <div>
            <a asp-action="SelecionPrestacion">Back to List</a>
        </div>
    }
